<!DOCTYPE html>
<html>
<head>
    @*<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - ServiceFirst</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/img/fav.png">
    <title>ServiceFirst</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    @*<link href="css/bootstrap-reboot.css" rel="stylesheet">*@
    <!-- Custom styles for this template -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</head>
<body>
    <header class="main_header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar navbar-expand-md mynav">
                        @*@Url.Action("CompanyList", "CompanyList", "Admin")*@
                        <a class="navbar-brand" href="@Url.Action("CompanyList")"><img class="img-fluid" alt="logo" src="~/img/logo.png"></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fas fa-bars"></i>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"> <i class="far fa-building"></i> Company </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("CompanyList")"> <i class="far fa-circle"></i> Company List </a>
                                        <a class="dropdown-item" href="@Url.Action("AddCompany",new { id=0})"> <i class="far fa-circle"></i> Add Company </a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><i class="far fa-building"></i> Company Manager </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("CompanyManagerList")"> <i class="far fa-circle"></i> Company Manager List </a>
                                        <a class="dropdown-item" href="@Url.Action("AddCompanyManager",new { id=0})"> <i class="far fa-circle"></i> Add Company Manager </a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ChangePassword")"> <i class="fas fa-unlock"></i> Change Password </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><img src="~/img/avatar.png"> My Account</a>
                                    <div class="dropdown-menu">
                                        <!--<a class="dropdown-item" href="#">Login</a>
                                        <a class="dropdown-item" href="#">Edit Account</a>-->
                                        <a class="dropdown-item" href="@Url.Action("Logout")"><i class="fas fa-sign-out-alt"></i> Sign Out</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
