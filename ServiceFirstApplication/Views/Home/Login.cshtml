@using ServiceFirstApplication.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<br /><br /><br />
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="wrapper">
        <center>
            <form class="form-signin">
                <h3 class="form-signin-heading">Please login</h3>

                @*<input type="text" class="form-control" name="username" placeholder="Email Address" required="" autofocus="" />*@<br />
                @Html.TextBoxFor(x => x.UserName, new { @placeholder = "UserName", @class = "form-control", @required = "" })
                @*<input type="password" class="form-control" name="password" placeholder="Password" required="" />*@<br />
                @Html.PasswordFor(x => x.Password, new { @placeholder = "Password", @class = "form-control", @required = "" })<br />
                @*<button class="btn btn-lg btn-primary btn-block" type="submit" style="width:280px">Login</button>*@
                <label style="color:red;">@TempData["message"]</label>
                <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block" style="width:280px" />
            </form>
        </center>
    </div>
}