@using ServiceFirstApplication.Models
@model ResetPasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<section class="addcompany_main">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="form-add-company">
                    <h3 class="a_heading">Chanage Password</h3>
                    @*<form>*@
                    @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post))
                    {
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                <strong></strong> @ViewBag.Message
                            </div>
                        }
                        <div class="form-row">
                            <div class="form-group col-md-6 offset-md-3">
                                <label for="">Old Pasword</label>
                                @Html.PasswordFor(x => x.OldPassword,
new { @class = "form-control", @required = "" })
                                @*<input type="text" class="form-control" id="" placeholder="">*@
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 offset-md-3">
                                <label for="inputAddress">New Password</label>
                                @Html.PasswordFor(x => x.Password,
new { @class = "form-control", @required = "", @id = "password" })
                                @*<input type="text" class="form-control" id="inputAddress" placeholder="">*@
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 offset-md-3">
                                <label for="inputAddress">Confirm Password</label>
                                @Html.PasswordFor(x => x.ConfirmPassword,
new { @class = "form-control", @required = "", @id = "confirmpassword" })
                                @*<input type="text" class="form-control" id="inputAddress" placeholder="">*@
                            </div>
                        </div>

                                                <div class="form-row">

                                                    <div class="form-group col-6  col-md-6 offset-md-3">
                                                        <button id="btn-submit" type="submit" class="btn btn-cancel">Submit</button>
                                                    </div>
                                                </div>
                    }
                    @*</form>*@

                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

        });
        $('#btn-submit').click(function () {
            var hasError = false;

                var password = $("#password").val();
                var confirmpassword = $("#confirmpassword").val();
                if(password!=confirmpassword)
                {
                    alert('The password and confirmation password do not match.');
                    hasError = true;
                    $("#confirmpassword").val('');
                }


            if (hasError == true) { return false; }

        });


    </script>
}