@using ServiceFirstApplication.Models
@model ServiceFirstCompanies
@{
    ViewBag.Title = ViewBag.TitleText;
}

<section class="addcompany_main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="form-add-company">
                    <h3 class="a_heading">@ViewBag.TitleText</h3>
                    @*<form>*@
                    @using (Html.BeginForm("AddCompany", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                <strong>@ViewBag.Message</strong>
                            </div>
                        }
                        <input type="hidden" value="@ViewBag.CompanyID" name="ServiceFirstCompanyID" id="ServiceFirstCompanyID" />

                        @*@Html.HiddenFor(x => x.ServiceFirstCompanyLogoFile)
                        @Html.HiddenFor(x => x.ServiceFirstCompanyIsActive)*@
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Name</label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyName,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">Organizations No.</label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyOrganisationNumber,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyOrganisationNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputAddress">Address 1</label>
                                @Html.TextAreaFor(x => x.ServiceFirstCompanyAddress,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyAddress, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputAddress2">Address 2</label>
                                @Html.TextAreaFor(x => x.ServiceFirstCompanyAddressII,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyAddressII, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputAddress">Postal No.</label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyPostalNumber,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyPostalNumber, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">Postal Place</label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyPostalPlace,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyPostalPlace, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Country</label>
                                @Html.DropDownListFor(x => x.ServiceFirstCompanyCountry, ViewBag.CountryList as SelectList, "Select Country", new { @class = "form-control", id = "Id" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for=""> Contact Email</label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyContactEmail,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyContactEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Contact Phone No.</label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyContactPhone,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyContactPhone, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">Add Logo</label>
                                <input type="file" name="file" id="file" class="form-control" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">No. of customers </label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyNoOfCustomers,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyNoOfCustomers, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">No. of tickets </label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyNoOfTickets,
new { @class = "form-control" })

                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyNoOfTickets, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">No. of Projects </label>
                                @Html.TextBoxFor(x => x.ServiceFirstCompanyNoOfProjects,
new { @class = "form-control" })

                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyNoOfProjects, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-6 col-md-6 text-right">
                                <button type="button" class="btn btn-cancel" id="btnCancel">Cancel</button>

                            </div>
                            <div class="form-group col-6  col-md-6 text-left">
                                <button type="submit" id="btn-submit" class="btn btn-submit">Submit</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnCancel').click(function () {
                window.location.href = '@Url.Action("CompanyList")';
            });
        });
    </script>
}