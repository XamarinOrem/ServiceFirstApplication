@using ServiceFirstApplication.Models
@model ServiceFirstProjectCategories
@{
    ViewBag.Title = "AddProjectCategory";
    Layout = "~/Views/Shared/_LayoutCManager.cshtml";
}


<div class="side-body cstm-side-body">
    <h2> @ViewBag.TitleText </h2>
   @using (Html.BeginForm("AddProjectCategory", "CManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
   {
       if (ViewBag.Message != null)
       {
        <div class="alert alert-success">
            <strong>@ViewBag.Message</strong>
        </div>
       }
    <input type="hidden" value="@ViewBag.ProjectCatId" name="ServiceFirstProjectCategoryId" id="ServiceFirstProjectCategoryId" />
        
        <div class="form-group">
            <label for="exampleInputFile">Name</label>
            @Html.TextBoxFor(x => x.ServiceFirstProjectCategoryName,
new { @class = "form-control-file" })
            @Html.ValidationMessageFor(x => x.ServiceFirstProjectCategoryName, "", new { @class = "text-danger" })

        </div>
        <div class="can_sub">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
   }
</div>



@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnCancel').click(function () {
                window.location.href = '@Url.Action("ListProjectCategories")';
            });
        });
    </script>
}
