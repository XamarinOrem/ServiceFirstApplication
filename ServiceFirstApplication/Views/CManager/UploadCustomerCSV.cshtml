@{
    Layout = "~/Views/Shared/_LayoutCManager.cshtml";
}

<div class="side-body cstm-side-body">
    <div class="side-body-after">
        <div class="row">
            <div class="col-md-12">
                <div class="form-add-company">
                    <h3 class="a_heading">Upload Customer CSV </h3>
                    @using (Html.BeginForm("UploadCustomerCSV", "CManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                <strong>@ViewBag.Message</strong>
                            </div>
                        }

                        <div class="form-row">
                            <div class="col-md-8">
                                <label for="exampleInputFile">Choose File</label>
                                <input type="file" class="form-control-file" id="file" name="file">

                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary" name="download" value="download" style="margin-top:45px">Download Test File</button>
                            </div>
                        </div>

                        <div class="can_sub">
                            <button type="submit" class="btn btn-primary" id="btnCancel" name="upload" value="upload">Submit</button>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnCancel').click(function () {
                window.location.href = '@Url.Action("CompanyList")';
            });
        });
    </script>
}