@using ServiceFirstApplication.Models
@model ServiceFirstTickets
@{
    ViewBag.Title = ViewBag.TitleText;
    Layout = "~/Views/Shared/_LayoutCManager.cshtml";
}

<div class="side-body cstm-side-body">
    <div class="side-body-after">
        <div class="row">
            <div class="col-md-12">
                <div class="form-add-company">
                    <h3 class="a_heading">@ViewBag.TitleText </h3>
                    @using (Html.BeginForm("AddTicket", "CManager", FormMethod.Post))
                    {
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">
                                <strong>@ViewBag.Message</strong>
                            </div>
                        }
                        <input type="hidden" value="@ViewBag.TicketId" name="ServiceFirstTicketID" id="ServiceFirstTicketID" />

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Name</label>
                                @Html.TextBoxFor(x => x.SeviceFirstTicketName,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.SeviceFirstTicketName, "", new { @class = "form-control-file text-danger" })



                            </div>
                            <div class="form-group col-md-6">
                                <label for="">Description </label>

                                @Html.TextAreaFor(x => x.ServiceFirstTicketDescription,
new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketDescription, "", new { @class = "form-control-file text-danger" })
                            </div>
                        </div>
                       
                      
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Customer</label>
                                @Html.DropDownListFor(x => x.ServiceFirstCompanyCustomerID, ViewBag.Customers as SelectList, "Select Customer", new { @class = "form-control-file", id = "ServiceFirstCustomerID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstCompanyCustomerID, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label for=""> Project</label>
                                @Html.DropDownListFor(x => x.ServiceFirstCompanyCustomersProjectID, ViewBag.Projects as SelectList, "Select Project", new { @class = "form-control-file", id = "ServiceFirstProjectID" })
                               
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Reporter</label>
                                @Html.DropDownListFor(x => x.ServiceFirstTicketReporter, ViewBag.Reporters as SelectList, "Select Reporter", new { @class = "form-control-file", id = "ServiceFirstUserID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketReporter, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                <label for="exampleInputFile">Assignee</label>
                                @Html.DropDownListFor(x => x.ServiceFirstTicketAssigneeID, ViewBag.Assignees as SelectList, "Select Assignee", new { @class = "form-control-file", id = "ServiceFirstID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketAssigneeID, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Type</label>
                                @Html.DropDownListFor(x => x.ServiceFirstTicketType, ViewBag.Types as SelectList, "Select Type", new { @class = "form-control-file", id = "ServiceFirstTickeTypeID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketType, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                <label for="exampleInputFile">Priority</label>
                                @Html.DropDownListFor(x => x.ServiceFirstTicketPriority, ViewBag.Priorities as SelectList, "Select Priority", new { @class = "form-control-file", id = "ServiceFirstTicketPriorityID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketPriority, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="">Status</label>
                                @Html.DropDownListFor(x => x.ServiceFirstTicketStatus, ViewBag.Statuses as SelectList, "Select Status", new { @class = "form-control-file", id = "ServiceFirstTicketStatusID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketStatus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-6">
                                <label for="exampleInputFile">Resolution</label>
                                @Html.DropDownListFor(x => x.ServiceFirstTicketResolution, ViewBag.Resolutions as SelectList, "Select Resolution", new { @class = "form-control-file", id = "ServiceFirstTicketResolutionID" })
                                @Html.ValidationMessageFor(x => x.ServiceFirstTicketResolution, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="can_sub">
                            <button type="button" class="btn btn-primary" id="btnCancel">Cancel</button>
                            <button type="submit" class="btn btn-primary sub">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnCancel').click(function () {
                window.location.href = '@Url.Action("ListTicket")';
            });
        });
    </script>
}