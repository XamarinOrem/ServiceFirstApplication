@model ServiceFirstApplication.Models.ServiceFirstUserGroup

@{
    Layout = "~/Views/Shared/_LayoutCManager.cshtml";
}
<div class="side-body cstm-side-body">
    <h2> @ViewBag.TitleText </h2>

    @using (Html.BeginForm("AddUserGroup", "CManager", FormMethod.Post))
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <strong>@ViewBag.Message</strong>
            </div>
        }
        <input type="hidden" value="@ViewBag.GroupID" name="ServiceFirstGroupID" id="ServiceFirstGroupID" />

                <div class="form-group">
                    <label for="exampleInputFile">Name:</label>
                    @Html.TextBoxFor(x => x.ServiceFirstGroupName,
new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ServiceFirstGroupName, "", new { @class = "form-control-file text-danger" })
                </div>
                <div class="can_sub">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

    }
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
