@using ServiceFirstApplication.Models
@model ServiceFirstTicketType
@{
    ViewBag.Title = "AddTicketType";
    Layout = "~/Views/Shared/_LayoutCManager.cshtml";
}
<div class="side-body cstm-side-body">
    <h2> @ViewBag.TitleText </h2>
   @using (Html.BeginForm("AddTicketType", "CManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
   {
       if (ViewBag.Message != null)
       {
        <div class="alert alert-success">
            <strong>@ViewBag.Message</strong>
        </div>
       }
    <input type="hidden" value="@ViewBag.TicketTypeId" name="ServiceFirstTickeTypeID" id="ServiceFirstTickeTypeID" />

        <div class="form-group">
            <label for="exampleInputFile">Icon:</label>
            <input type="file" class="form-control-file" id="file" name="file">
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Name:</label>
            @Html.TextBoxFor(x => x.ServiceFirstTicketTypeName,
new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ServiceFirstTicketTypeName, "", new { @class = "form-control-file text-danger" })


          
        </div>
        <div class="can_sub">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
   }
</div>


@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnCancel').click(function () {
                window.location.href = '@Url.Action("AddTicketType")';
            });
        });
    </script>
}
